<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </GridLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="175dp"
        android:layout_height="170dp"
        android:textSize="20dp"
        android:background="@drawable/plant6"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignStart="@+id/button4"
        android:layout_marginBottom="28dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="184dp"
        android:layout_height="170dp"
        android:textSize="20dp"
        android:background="@drawable/plant_png"
        android:layout_marginBottom="212dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:textSize="20sp"
        android:background="@drawable/plant7"
        android:layout_above="@+id/button6"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="184dp"
        android:layout_height="170dp"
        android:textSize="20sp"
        android:background="@drawable/plant1"
        android:layout_marginStart="53dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:textSize="20dp"
        android:background="@drawable/plant4"
        android:layout_alignTop="@+id/button1"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="99dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:textSize="20sp"
        android:background="@drawable/plant2"
        android:layout_marginStart="70dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button1" />


</RelativeLayout>