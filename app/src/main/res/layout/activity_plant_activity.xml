<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plant_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nlipski.myapplication.plant_activity"
    android:background="#323232">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="75dp"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription=""
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tvPlantName"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="790dp" />

    <TextView
        android:text="Next Watering:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="19dp"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Sunlight"
        android:layout_width="wrap_content"
        android:id="@+id/btnSunlight"
        android:layout_height="70dp"
        android:layout_below="@+id/btnWater"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:id="@+id/button2"
        android:layout_height="70dp"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/btnSunlight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/_8_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNextWaterDays"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginEnd="11dp"
        android:textColor="@android:color/background_light"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignEnd="@+id/ivPlant"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="Sample Plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPlantName"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="70dp"
        android:shadowColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:layout_below="@+id/tvNextWaterDays"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_height="400dp"
        app:srcCompat="@drawable/plant_png"
        android:id="@+id/ivPlant"
        android:layout_width="500dp"
        android:contentDescription="@string/png_file"
        android:background="@drawable/cshadow"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false" />

    <Button
        android:text="Water"
        android:layout_width="wrap_content"
        android:id="@+id/btnWater"
        android:layout_height="70dp"
        style="@style/Widget.AppCompat.Button"
        android:textAlignment="center"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/ivPlant"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignEnd="@+id/ivPlant" />


</RelativeLayout>
